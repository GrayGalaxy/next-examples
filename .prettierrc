{
	"useTabs": true,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"arrowParens": "always",
	"semi": false,
	"printWidth": 80,
	"trailingComma": "all",
	"tabWidth": 2,
	"overrides": [
		{
			"files": ["*.css, *.scss", "*.sass"],
			"options": {
				"tabWidth": 4
			}
		},
		{
			"files": ["*.yaml", "*.yml"],
			"options": {
				"useTabs": false
			}
		}
	]
}
